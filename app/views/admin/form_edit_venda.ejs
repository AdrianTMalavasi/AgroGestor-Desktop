<%- include('../partes/head') %>

<body>
    <%- include('../partes/header') %>

    <div class="formulario">
		<%- include('../partes/notificacao') %>
        <div class="formCenter login">
            <form action="/venda/update/<%=venda[0].idVend%>" method="post"> 
                <h3 class="title">Formulario de Edição</h3>
                <input type="hidden" name="idVend" value="<%=venda[0].idVend%>">
                <div class="form-group">
                    <label for="nomeEmpresa">Nome da Empresa:</label>
                    <input type="text" id="nomeEmpresa" name="nomeEmpresa" value="<%=venda[0].nomeEmpresa%>">
                </div>

                <div class="form-group">
                    <label for="qtdSacas" >Quantidade de Saca:</label>
                    <input type="text" id="qtdSacas" name="qtdSacas" value="<%=venda[0].qtdSacas%>">
                </div>

                <div class="form-group">
                    <label for="valorSaca" >Valor da Saca:</label>
                    <input type="text" id="valorSaca" name="valorSaca" value="<%=venda[0].valorSaca%>">
                </div>

                <div class="form-group">
                    <label for="dataVenda" >Data de venda:</label>
                    <input type="date" id="dataVenda" name="dataVenda" value="<%=venda[0].dataVenda%>">
                </div>

                <div class="form-group">
                        <label for="mtdPagamento" >Método de Pagamento</label>
                        <select name="mtdPagamento" id="mtdPagamento">
                            <% const metodosPagamento = ['Pix', 'Cheque', 'Transferencia', 'Dinheiro', 'Boleto']; %>

                            <option value="<%= venda[0].mtdPagamento %>" selected><%= venda[0].mtdPagamento %></option>
                            

                            <% metodosPagamento.forEach(function(metodo) { %>
                                <% if (metodo !== venda[0].mtdPagamento) { %>
                                    <option value="<%= metodo %>"><%= metodo %></option>
                                <% } %>
                            <% }) %>
                        </select>
                        
                        
                </div>
                
                <button type="submit">Editar</button>
            </form>
        </div>
    </div>
    <%- include('../partes/footer') %>
</body>
</html>
