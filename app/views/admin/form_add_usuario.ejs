<%- include('../partes/head') %>
<body>
    <%- include('../partes/header') %>
    <div class="formulario">
		<%- include('../partes/notificacao') %>
        <div class="formCenter login">
            <form action="/usuario/salvar" method="post"> 
                <a href="javascript:history.back()" class="buttonVoltar">
                    <span class="iconify" data-icon="mdi:arrow-left" data-inline="false" style="font-size: 22px;color: white; align-self: flex-start;"></span>
                </a>

                <h3 class="title">Formulario de Cadastro</h3>
                <div class="form-group">
                    <label for="login">Login:</label>
                    <input type="text" id="login" name="login" value="<%=usuario.login%>" placeholder="Digite um login">
                </div>

                <div class="form-group">
                    <label for="senha" >Senha:</label>
                    <input type="password" id="senha" name="senha" value="<%=usuario.senha%>" placeholder="Digite a senha">
                </div>

                <button type="submit">Salvar</button>
            </form>
        </div>
    </div>
    <%- include('../partes/footer') %>
</body>
</html>
