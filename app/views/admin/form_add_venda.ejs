<%- include('../partes/head') %>

<body>
    <%- include('../partes/header') %>

    <div class="formulario">
		<%- include('../partes/notificacao') %>
        <div class="formCenter login">
            <form action="/venda/salvar" method="post"> 
                <h3 class="title">Formulario de Venda</h3>
                
                <div class="form-group">
                    <label for="nomeEmpresa">Nome da Empresa:</label>
                    <input type="text" id="nomeEmpresa" name="nomeEmpresa" value="<%=venda.nomeEmpresa%>" placeholder="Digite o nome da empresa">
                </div>

                <div class="form-group">
                    <label for="qtdSacas" >Quantidade de Saca:</label>
                    <input type="text" id="qtdSacas" name="qtdSacas" value="<%=venda.qtdSacas%>" placeholder="Digite a quantidade de sacas">
                </div>

                <div class="form-group">
                    <label for="valorSaca" >Valor da Saca:</label>
                    <input type="text" id="valorSaca" name="valorSaca" value="<%=venda.valorSaca%>" placeholder="Digite o valor por saca">
                </div>

                <div class="form-group">
                    <label for="dataVenda" >Data de venda:</label>
                    <input type="date" id="dataVenda" name="dataVenda" value="<%=venda.dataVenda%>">
                </div>

                <div class="form-group">
                        <label for="mtdPagamento" >Método de Pagamento</label>
                        <select name="mtdPagamento" id="mtdPagamento">
                            <option value="" selected disabled>Selecione um Método de Pagamento</option>
                            <option value="Pix">Pix</option>
                            <option value="Cheque">Cheque</option>
                            <option value="Transferencia">Transferencia</option>
                            <option value="Dinheiro">Dinheiro</option>
                            <option value="Boleto">Boleto</option>
                        </select>
                </div>
                
                <button type="submit">Registrar</button>
            </form>
        </div>
    </div>
    <%- include('../partes/footer') %>
</body>
</html>
